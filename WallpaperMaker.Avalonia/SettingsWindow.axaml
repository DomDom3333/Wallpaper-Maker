<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="WallpaperMaker.Avalonia.SettingsWindow"
        Title="Shape Settings"
        Width="560" Height="580"
        MinWidth="480" MinHeight="400"
        CanResize="True"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="12">
        <!-- Header row -->
        <Grid DockPanel.Dock="Top" ColumnDefinitions="120,*,30,*,65" Margin="0,0,0,6">
            <TextBlock Grid.Column="0" Text="Shape" FontWeight="SemiBold" />
            <TextBlock Grid.Column="1" Text="Amount" HorizontalAlignment="Center" FontWeight="SemiBold" />
            <TextBlock Grid.Column="2" Text="" Width="30" />
            <TextBlock Grid.Column="3" Text="Size" HorizontalAlignment="Center" FontWeight="SemiBold" />
            <TextBlock Grid.Column="4" Text="Enabled" Width="65" HorizontalAlignment="Center" FontWeight="SemiBold" />
        </Grid>

        <!-- Bottom controls -->
        <StackPanel DockPanel.Dock="Bottom" Spacing="8" Margin="0,8,0,0">
            <Separator />

            <!-- Fill mode -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Shape Fill:" VerticalAlignment="Center" Width="80" />
                <ComboBox x:Name="CbFillMode" Width="160" SelectedIndex="0" />
            </StackPanel>

            <!-- Background mode -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Background:" VerticalAlignment="Center" Width="80" />
                <ComboBox x:Name="CbBackgroundMode" Width="160" SelectedIndex="0" />
            </StackPanel>

            <!-- Opacity -->
            <Grid ColumnDefinitions="80,*,40,*,40">
                <TextBlock Grid.Column="0" Text="Opacity:" VerticalAlignment="Center" />
                <Slider Grid.Column="1" x:Name="SlMinOpacity" Minimum="0" Maximum="100" Value="100" IsSnapToTickEnabled="True" TickFrequency="5" />
                <TextBlock Grid.Column="2" Text="to" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <Slider Grid.Column="3" x:Name="SlMaxOpacity" Minimum="0" Maximum="100" Value="100" IsSnapToTickEnabled="True" TickFrequency="5" />
                <TextBlock Grid.Column="4" x:Name="TxtOpacity" Text="100%" VerticalAlignment="Center" />
            </Grid>

            <!-- Strokes -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <CheckBox x:Name="CbStrokes" Content="Enable Strokes" IsChecked="False" />
                <TextBlock Text="Width:" VerticalAlignment="Center" Margin="12,0,0,0" />
                <Slider x:Name="SlStrokeWidth" Minimum="1" Maximum="10" Value="2" Width="120" IsSnapToTickEnabled="True" TickFrequency="1" />
            </StackPanel>

            <!-- Seed display -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Seed:" VerticalAlignment="Center" />
                <TextBox x:Name="TbSeed" IsReadOnly="True" Width="260" />
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="80" Click="BtnCancel_Click" />
                <Button Content="Done" Width="80" Click="BtnDone_Click" />
            </StackPanel>
        </StackPanel>

        <!-- Scrollable shape list -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ShapeListPanel" Spacing="4" />
        </ScrollViewer>
    </DockPanel>
</Window>
